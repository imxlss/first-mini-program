.card {
  height: 100rpx;
  width: 85%;
  margin: 10rpx auto;
  padding: 20rpx 4%;
  font-size: 10pt;
  color: #333;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 18rpx 0 rgba(0, 35, 90, .06), 0 0 2px 0 rgba(0, 35, 90, .04);

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.card-top {
  width: 100%;
  display: flex;
  justify-content: space-between;
}


.text-weekday {
  margin-left: 10rpx;
  color: #999;
}
