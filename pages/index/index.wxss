page {
    background-image: linear-gradient(to right top, #cfd9df, #d4dde3, #d8e2e7, #dde6ec, #e2ebf0);
}

.loc_txt {
    font-size: 52rpx;
}

.cond_txt {
    font-size: 32rpx;
}

.tmp_txt {
    font-size: 120rpx;
}

.today-container {
    width: 90vw;
    margin: 24rpx 40rpx;
    display: flex;
    justify-content: space-between;
}

.today view {
    display: inline;
}

.today-week text:first-child {
    font-size: 36rpx;
}

.today-week text:last-child {
    padding: 0 16rpx;
    font-size: 24rpx;
}

.today-temp text {
    padding: 0 16rpx;
    font-size: 32rpx;
}

.line {
    height: 1rpx;
    width: 100vw;
    background: rgb(179, 214, 230);
}

.future-container {
    display: flex;
    width: 90vw;
    padding: 30rpx 5vw;
    justify-content: space-around;
    background: #D5CABD;
    opacity: 0.2;
}

.future-item {
    width: 30vw;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.future-item view {
    line-height: 50rpx;
    font-size: 24rpx;
}

.future-item view:first-child {
    font-size: 24rpx;
}

.future-item view:nth-child(2) {
    font-size: 24rpx;
}

.future-item view:nth-child(3) {
    font-size: 24rpx;
}